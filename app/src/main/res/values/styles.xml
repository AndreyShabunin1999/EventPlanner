<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AccentButton">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="elevation">0dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:background">@drawable/primary_btn_bckgr_selector</item>
    </style>

    <style name="RedButton">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="elevation">0dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:background">@drawable/red_btn_background</item>
    </style>

    <style name="inputEditText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/edittext_border</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/grey</item>
        <item name="android:layout_marginHorizontal">16dp</item>
        <item name="android:layout_marginVertical">10dp</item>
    </style>

    <style name="CustomTextViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginHorizontal">16dp</item>
        <item name="android:layout_marginVertical">10dp</item>
    </style>

    <style name="EditTextStyleNotFocusable">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:background">@drawable/edittext_grey_border</item>
        <item name="android:layout_marginVertical">10dp</item>
        <item name="android:layout_marginHorizontal">16dp</item>
        <item name="android:clickable">false</item>
        <item name="android:focusable">false</item>
        <item name="android:inputType">textAutoComplete</item>
    </style>

    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">10.5sp</item>
    </style>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:textColor">@color/black</item>
        <item name="android:popupBackground">@color/white</item>
    </style>

</resources>